extends base

block content

    .heading
        h2.txt
            strong
                em  MENU 
    .menu.container
        .row
            each product in products
                .col-md-4.imgdiv
                    a(href=`/menu/${product.slug}`)
                        img.menu_image.img-responsive.thumbnail(src=`/img/products/${product.images[0]}` alt=`${product.title}`)
                    h5.menu_header
                        a(href=`/menu/${product.slug}`)= product.title
                    p= `GHS ${product.price}`
